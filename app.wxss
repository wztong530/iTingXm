page {
  /* --theme:#FFA00F; */
  --text: #ff9500;
  --linearOne: linear-gradient(-135deg, #ff9000 0%, #fa0 81%, #ffdb93 100%);
  --linearTwo: linear-gradient(-90deg, #ff9000 0%, #fa0 93%);
  --linearThree: linear-gradient(0deg, #ff9000 0%, #fa0 100%);
}

/**app.wxss**/
@import 'static/css/public.wxss';
@import 'static/css/iconfont.wxss';
@import 'static/css/iconfont2.wxss';

page {
  background-color: rgb(242, 242, 242);
  font-color: #000;
}
/* 授权按钮隐藏 */
.hid-btn{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
  z-index: 99;
}
/* 数据初始化时的遮盖层 */
.cover-window{
  position: fixed;
  top:0;
  left: 0;
  width:100%;
  height: 100%;
  background-color: rgb(242, 242, 242);
  z-index: 9999999;
}
.txtcolor {
  color: var(--text) !important;
}

.mr5 {
  margin-right: 10rpx;
}

.pr {
  position: relative;
}

/* 去滚动条 */

::-webkit-scrollbar {
  display: none;
  width: 0;
}

/* 超出两行隐藏 */

.text-2-eclips {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 超出一行隐藏 */

.text-1-eclips {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 上下左右一像素边框 */

.xpk-1px-b {
  position: relative;
}

.xpk-1px-b::after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #c7c7c7;
  color: #c7c7c7;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.xpk-1px-t {
  position: relative;
}

.xpk-1px-t::after {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid #c7c7c7;
  color: #c7c7c7;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.xpk-1px {
  position: relative;
}

.xpk-1px::before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 200%;
  border: 1px solid #c7c7c7;
  color: #c7c7c7;
  height: 200%;
  -webkit-transform-origin: left top;
  transform-origin: left top;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
}

.gradual-box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 40rpx;
  opacity: 0.05;
  background-image: linear-gradient(rgba(255, 255, 255, 0.00), #000);
}
