/* pages/dynamicDetail/dynamicDetail.wxss */
page{
  background-color: #fff;
}
.detail_top{
  width:100%;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  padding: 28rpx;
}
.detail_top .avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.detail_top .name{
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #000000;
  letter-spacing: 0;
  margin-bottom: 8rpx;
}
.detail_top .time{
  font-family: PingFangSC-Light;
  font-size: 10px;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
}

.detail_card{
  width:100%;
  background-color: #fff;
  margin-bottom: 18rpx;
  padding: 28rpx;
  font-family: PingFangSC;
  overflow: hidden;
}
.detail_card .card-content{
  width:690rpx;
  font-size:28rpx;
  line-height: 40rpx;
  color:#333;
  margin-bottom: 20rpx;
  word-wrap: break-word;
  word-break: break-all;
}
.detail_card .card-imgsbox{
  display: flex;
  flex-wrap: wrap;
}
.detail_card .card-imgsbox image{
  width: 211rpx;
  height: 211rpx;
  padding: 10rpx;
  border-radius: 4rpx;
}
.detail_bottom{
  width:100%;
  height: 98rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-around;
  flex-wrap: nowrap;
  align-items: center;
  border-top: 2rpx solid #D8D8D8;
  padding:0 28rpx;
}
.detail_bottom .item{
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}
.detail_bottom .item .card_icon{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.detail_bottom .item .card_text{
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #000000;
  letter-spacing: 0;
}
.detail_bottom .flag{
  width:2rpx;
  height: 70rpx;
  background: #D8D8D8;
}