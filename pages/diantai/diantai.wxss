/* pages/diantai/diantai.wxss */
page{
  background: #fff;
}
.productsRecommended{
  padding-left: 30rpx;
}
.productsRecommended swiper{
  height: 440rpx;
  padding:30rpx 0 20rpx;
}
.productsRecommended .conts{
  width: 644rpx;
  height: 420rpx;
  background: #FFFFFF;
  box-shadow: 0 4px 12px 0 rgba(0,0,0,0.10);
  border-radius: 8px;
  position: relative;
}
.productsRecommended .conts .img{
  width: 100%;
  height: 316rpx;
  background: #eee;
  margin-bottom: 10rpx;
  border-radius: 16rpx 16rpx 0 0 ;
}
.productsRecommended .conts .title{
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #000000;
  padding-left: 20rpx;
  width: 614rpx;
}
.productsRecommended .conts .con{
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #666666;
  padding-left: 20rpx;
  width: 614rpx;
}
.productsRecommended .conts .class{
  font-family: PingFangSC-Medium;
  font-size: 12px;
  color: #FFFFFF;
  text-align: center;
  background-image:var(--linearTwo);
  width: 222rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 300rpx 0 1000rpx 0/300rpx 100rpx 1000rpx 0; 
  position:absolute;
  top:0;
}
.label{
  font-family: PingFangSC;
  font-size: 20px;
  color: #000000;
  font-weight: 500;
  padding: 0 0 20rpx 34rpx;
}
.hotRecommended{
  display: flex;
  /* justify-content: space-between; */
  flex-wrap: wrap;
  padding-left:30rpx;
}

.hotRecommended .item .radio_box{
  width: 210rpx;height: 210rpx;
  border-radius: 16rpx;
  position: relative;
  margin-right: 30rpx;
}
.hotRecommended .item .radio_box .bg{
  width: 100%;
  height: 100%;
  background-color: #eee;
  border-radius:16rpx;
}
.hotRecommended .item .radio_box .conts{
  position: absolute;
  width:100%;
  height:100%;
  top:0;
  left:0;
}
.hotRecommended .item .conts .play_icon{
  width: 30rpx;height: 30rpx;
  border-radius: 15rpx;
  transform: rotate(360);
  transition: transform .5s;
  margin-left:5px;
}
.hotRecommended .item .conts .listen_times{
  font-family: PingFangSC-Regular;
  font-size: 9px;
  color: #FFFFFF;
  letter-spacing: 0;
  width: 100%;
  height: 60rpx;
  background-image: linear-gradient(180deg, rgba(0,0,0,0.00) 16%, rgba(0,0,0,0.25) 100%);
  position:absolute;
  bottom:0;
  border-bottom-left-radius:16rpx;
  border-bottom-right-radius:16rpx;
  padding:21rpx 0 0 10rpx;
  box-sizing:border-box;
}
.hotRecommended .item .conts .listen_times .icon{
  width: 30rpx;
  height: 30rpx;
  margin-right: 12rpx;
}
.hotRecommended .item .radio_name{
  display: inline-block;
  margin-top: 10rpx;
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #000000;
  letter-spacing: 0;
  text-align:center;
  width:210rpx;
}