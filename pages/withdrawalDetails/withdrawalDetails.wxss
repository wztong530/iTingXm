/* pages/withdrawalDetails/withdrawalDetails.wxss */
page{
  background-color: #ffffff;
}
.list{

}
.list .item{
  height: 156rpx;
  width: 690rpx;
  margin: 0 auto;
  border-bottom:1px solid #E5E5E5;
  display: flex; 
  align-items: center;
}
.list .item .left{
  display: flex;
  flex: 1;
  align-items: center;
}
.list .item .left image{
  width: 84rpx;
  height: 84rpx;
  border-radius: 42rpx;
  margin-right: 24rpx;
}
.list .item .left .text .opera{
  font-family: PingFangSC-Semibold;
  font-size: 14px;
  color: #070707;
  letter-spacing: -0.34px;
  line-height: 14px;
  margin-bottom: 20rpx;
}
.list .item .left .text .time{
  opacity: 0.4;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #070707;
  letter-spacing: -0.29px;
  line-height: 12px;
}
.list .item .right{
  flex: 1;
  text-align: right;
}
.list .item .right .money{
  font-family: PingFangSC-Medium;
  font-size: 18px;
  color: #333333;
  letter-spacing: -0.43px;
  line-height: 12px;
  margin-bottom: 24rpx;
}
.list .item .right .status{
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #000000;
  letter-spacing: -0.29px;
  text-align: right;
  line-height: 12px;
}

.yellow{
  color:var(--text)!important;
}
.red{
  color:#ff0000!important;
}

.nodata{
  padding-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.nodata image{
  margin-bottom: 20rpx;
  width:400rpx;
  height: 286rpx;
}
.nodata text{
  opacity: 0.6;
font-family: PingFangSC-Light;
font-size: 14px;
color: #000000;
letter-spacing: -0.3px;
text-align: center;
line-height: 20px;
}