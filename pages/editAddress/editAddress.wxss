/* pages/editaddress/editaddress.wxss */

page {
  background-color: #f3f3f3;
}

.editAddressfrom {
  background-color: #fff;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.4);
  border-radius: 8px;
  padding: 0 34rpx;
  margin: 24rpx 24rpx 0;
}

.editItem {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f0f0f0;
  padding: 20rpx 0;
}

.editItem label {
  width: 140rpx;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #acacac;
  letter-spacing: 0;
}

.x-input {
  flex: 1;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #000;
  letter-spacing: 0;
}

.xp-input {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  letter-spacing: 0;
  color: #acacac;
  opacity: 0.4;
}

.option {
  flex: 3;
}

.option text {
  border: 1rpx solid #e0e0e0;
  border-radius: 4px;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #666;
  padding: 8rpx 40rpx;
  margin-right: 20rpx;
}

.option .select {
  border: 1rpx solid var(--text);
  color: var(--text);
  background-color: rgba(255, 149, 0, 0.17);
}

.confirm {
  border-radius: 100px;
  background-image: var(--linearTwo);
  box-shadow: 0 5px 7px 0 rgba(0, 0, 0, 0.15);
  color: #fff;
  width: 650rpx;
  height: 80rpx;
  margin: 60rpx auto 0;
  font-size: 16px;
  line-height: 80rpx;
  text-align: center;
}

.del {
  background: #fff;
  box-shadow: 0 5px 7px 0 rgba(0, 0, 0, 0.15);
  border-radius: 100px;
  width: 650rpx;
  height: 80rpx;
  margin: 40rpx auto 0;
  font-size: 16px;
  line-height: 80rpx;
  text-align: center;
}

.editItem .icon-xyb {
  font-size: 12px;
  opacity: 0.5;
}
