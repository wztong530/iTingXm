/* pages/traffic/traffic.wxss */
/* 顶部导航栏 */
.header{
  position: fixed;
  width: 100%;
  top:0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  height: 88rpx;
  background-color: white;
  z-index: 9999;
}

.emptybox{
  height: 88rpx;
  box-shadow: 0 0.5px 0 0 #d5d5db, 0 2px 4px 0 rgba(0, 0, 0, 0.08);
}
.header .title{
  font-family: PingFangSC-Medium;
  font-size: 18px;
  color: #000000;
  /* letter-spacing: -0.43px; */
  font-weight: 700;
  padding: 0 5rpx;
}
.back{
  position: absolute;
  left: 8rpx;
  width: 40rpx;
  height: 40rpx;
  padding: 20rpx;
  top:50%;
  margin-top:-20rpx;
  z-index: 99999;
}
.header .back.sp{
  margin-top: 5rpx;
}
/* 顶部导航栏 */


page{
  width: 100%;
  height: 100%;
}
.traffic_live{
  background: #FFFFFF;
  box-shadow: 0 4px 12px 0 rgba(0,0,0,0.20);
  border-radius: 8px;
  width: 724rpx;
  height: 418rpx;
  position: fixed;
  bottom: 10rpx;
  left: 50%;
  transform: translateX(-50%);
}
.traffic_live .top_box{
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  padding: 32rpx 20rpx 18rpx 20rpx;
  box-sizing: border-box;
}
.traffic_live .top_box .address{
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #000000;
}
.traffic_live .top_box .num{
  width:30%;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: var(--text);
  margin-top: 4rpx;
  text-align: right;
}

.traffic_live .split{
  width: 100%;
  height: 2rpx;
  background-color: #f5f5f5;
}
.traffic_live .traffic_list{
  padding:30rpx 20rpx 55rpx 20rpx;
  box-sizing: border-box;
  height: 250rpx;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  letter-spacing: 0;
}
.traffic_live .traffic_list .item{
  display: flex;
  flex-wrap: nowrap;
}
.traffic_live .traffic_list .name{
  color: var(--text);  
}
.traffic_live .traffic_list .text{
  color: #000000;
  line-height: 20px;
  white-space: pre-wrap;
  height: 60px;
  /* 首行缩进 超出3行隐藏 */
  text-indent: 28px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.traffic_live .btn{
  background-color:var(--textTwo);
  width: 684rpx;
  height: 66rpx;
  border-radius: 28rpx;
  position: absolute;
  bottom: 24rpx;
  left: 50%;
  transform: translateX(-50%);
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align:center;
  line-height:66rpx;
}
.add{
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background-color:var(--textTwo);
  text-align: center;
  line-height: 88rpx;
  position: absolute;
  right: 30rpx;
  bottom: 468rpx;
}
.add .add_img{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}