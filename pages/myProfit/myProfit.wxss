/*  */

.list {
  max-height: 1100rpx;
  background-color: white;
}
.list .day{
  position: relative;
  padding-left: 32rpx;
    box-sizing: border-box;
    /* padding-top: 100rpx; */
}
.list .item {
  display: flex;
  height: 206rpx;
  padding: 40rpx 0 0 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ddd;
}

.list .item .info {
  flex: 1;
}

.list .info text {
  text-align: left;
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: #808080;
  letter-spacing: -0.31px;
  line-height: 13px;
  margin-bottom: 22rpx;
}

.list .info .name {
  font-family: PingFangSC-Regular;
  font-size: 15px;
  color: #000;
  letter-spacing: -0.36px;
  line-height: 16px;
}

.list .item .status {
  width: 120rpx;
  margin-right: 30rpx;
}

.list .status .txt {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #000;
  letter-spacing: -0.39px;
  text-align: center;
  line-height: 16px;
  margin-bottom: 26rpx;
}

.list .status .txt.red {
  color: #f00;
}

.list .item .status .money text {
  display: inline;
  font-family: PingFangSC-Medium;
  font-size: 24px;
  color: #c4a66a;
  letter-spacing: -0.58px;
  text-align: right;
  line-height: 26px;
}

.list .status .money .icon {
  font-family: PingFangSC-Medium;
  font-size: 20px;
  letter-spacing: -0.48px;
}

.hasdata {
  opacity: 0.45;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #000;
  letter-spacing: -0.29px;
  text-align: center;
  line-height: 150rpx;
}


/*  */

.title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  height: 100rpx;
  background-color: #fff;
}

.title .choice-time {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 132rpx;
  height: 52rpx;
  background: #fff;
  border: 1rpx solid #dfdfdf;
  border-radius: 100px;
}

.title .choice-time text {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #000;
  letter-spacing: -0.34px;
  text-align: center;
  line-height: 14px;
  margin-right: 12rpx;
}

.title .tip {
  display: flex;
  flex-direction: column;
    align-items: flex-end;
}

.title .tip text {
  display: inline;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #999;
  letter-spacing: -0.34px;
}

.tringle {
  position: relative;
  top: 6rpx;
  width: 0;
  height: 0;
  border: 10rpx solid rgba(0, 0, 0, 0.3);
  border-right-color: transparent;
  border-bottom-color: transparent;
  border-left-color: transparent;
}
.day-title{
  position: absolute;
  width:100%;
  height: 100rpx;
  top:0;
  left:0;
  background: #f2f2f2;
  display: flex;
  padding: 0 38rpx;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;
}
.day-title>view{
  flex:1;
}
.day-title .name{
  margin-right: 106rpx;
}
.day-title .mr{
  margin-right: 54rpx;
}
.day-title text{
  display: inline-block;
  font-family: PingFangSC-Regular;
font-size: 14px;
color: #999999;
letter-spacing: -0.34px;
}
.day-title .name text{
  font-size: 18px;
}
.day-title .color{
  color:var(--text);
}


.nodata{
  padding-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.nodata image{
  margin-bottom: 20rpx;
  width:400rpx;
  height: 286rpx;
}
.nodata text{
  opacity: 0.6;
font-family: PingFangSC-Light;
font-size: 14px;
color: #000000;
letter-spacing: -0.3px;
text-align: center;
line-height: 20px;
}