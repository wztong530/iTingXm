/* pages/trafficDetail/trafficDetail.wxss */
page{
  background-color: #fff;
  
}
.title{
  padding:30rpx 28rpx;
  border:1px solid #f5f5f5;
}
.title>text:first-child{
  opacity: 0.8;
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #FF6F4D;
  letter-spacing: 0;
  margin-right: 10rpx;
}
.title>text:last-child{
  opacity: 0.8;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #000000;
  letter-spacing: 0;
}
.detail{
  padding:28rpx;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  letter-spacing: 0;
}
.detail>text:first-child{
  color: #FF6C56;  
}
.detail>text:first-child+text{
  color: #000000;
  line-height: 20px;
}