<header title='{{title}}'></header>

<view class='title'>
  <view>
    <text class='name'>今日粉丝：</text>
    <text class='value'>{{data.todayfollow}}人</text>
  </view>
  <view>
    <text class='name'>全部粉丝：</text>
    <text class='value'>{{data.allfollow}}人</text>
  </view>
</view>

<scroll-view scroll-y class='list' wx:if='{{list.length}}'>
  <view class='item' wx:for='{{list}}'>
    <view class='fl'>
    <image src='{{item.headPortrait || "images/default-tx.svg"}}' class='user'></image>
    <view class='content'>
      <text class='name'>{{item.wechatName}}</text>
      <text class='time'>{{item.parentTime}}关注了</text>
    </view>
    </view>
    <!-- <image src='../../images/Shape.svg' class='call' bindtap='call' data-index='{{index}}'></image> -->
  </view>
  <view class='hasdata' wx:hidden='{{nodata}}'><text>无更多内容了~</text></view>
</scroll-view>
    <view class='nodata' wx:else>
      <image src='/images/kym.svg'></image>
      <text>暂无粉丝</text>
    </view>