.activity {
  position: relative;
  height: 64rpx;
  background-color: #fff;
  box-shadow: 0 3px 11px 0 rgba(0, 0, 0, 0.09);
  padding-left: 24rpx;
  box-sizing: border-box;
  z-index: 2;
}

.activity text {
  font-family: PingFangSC-Regular;
  font-size: 13px;
  letter-spacing: 0;
  line-height: 13px;
}

.activity .key {
  color: var(--text);
}
.activity swiper{
  flex: 1;
  height: 64rpx;
}
.activity swiper .item{
  display: flex;
  align-items: center;
}
.swiper {
  background-color: #fff;
  height: 400rpx;
}

.swiper image {
  width: 750rpx;
  height: 400rpx;
}

.content {
  position: relative;
  padding-left: 20rpx;
  box-sizing: border-box;
  padding-top: 149rpx;
}
.content.shipei{
  padding-top: 197rpx;
}

.orderbox {
  position: absolute;
  top: -50rpx;
  right:0;
  width: 730rpx;
  height: 176rpx;
  display: flex;
}
.orderbox.shipei{
  top:-34rpx;
}
.orderbox .btn {
  position: absolute;
  top:0;
  left:0;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  width: 88rpx;
  height: 176rpx;
  background-image: var(--linearOne);
  border-radius: 4rpx;
  margin-right: 14rpx;
  z-index: 2;
  box-shadow: 0 13px 14px 0 rgba(0,0,0,0.10);
}
.orderbox .empty{
    flex-shrink: 0;
    width: 88rpx;
  height: 176rpx;
    margin-right: 14rpx;
}

.orderbox .btn text {
font-family: PingFangSC-Medium;
font-size: 16px;
color: #FFFFFF;
letter-spacing: 2rpx;
line-height: 16px;
  writing-mode: tb-rl;
}

.orderbox .scrollbox {
  position: relative;
  width:100rpx;
  flex: 1;
}

.orderbox .orderlist {
  display: flex;
}

.orderbox .item {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  flex-shrink: 0;
  width: 218rpx;
  height: 176rpx;
  background-color: #fff;
  margin-right: 12rpx;
  box-shadow: 0 13px 14px 0 rgba(0,0,0,0.10);
  border-radius: 2px;
}

.orderbox .item.select text {
  font-family: PingFangSC-Medium;
}

.orderbox .item text {
  font-family: PingFangSC-Regular;
  letter-spacing: 0;
  color: #a4a4a4;
}

.orderbox .item .date {
  font-size: 16px;
  color: #a4a4a4;
  margin-bottom: 14rpx;
}

.orderbox .item.select .date {
  color: var(--text);
  font-weight: 700;
}

.orderbox .item .time {
  font-size: 14px;
  line-height: 14px;
  margin-bottom: 12rpx;
}

.orderbox .item.select .time {
  font-size: 14px;
  color: #000;
  line-height: 14px;
  font-weight: 600;
}

.orderbox .item .tip {
  letter-spacing: 0.7px;
  font-size: 12px;
}

.orderbox .item.select .tip {
  color: #4a4a4a;
}

.orderbox .item .tip .num {
  color: var(--text);
  font-size: 14px;
  letter-spacing: 0.7px;
}

.orderbox .item.select .selectbar {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 4rpx;
  background: #ff9500;
  border-radius: 51px;
}

.recommend {
  position: relative;
  overflow: hidden;
  width:730rpx;
  height: 508rpx;
  margin-bottom: 100rpx;
}
.shipei .recommend{
  margin-bottom: 150rpx;
}

.recommend .box {
  display: flex;
}
.recommend .box.tran{
  transition:.5s;
}
.recommend .box .item.current{
  opacity: 1;
}
.recommend .box .item {
  position: relative;
  flex-shrink: 0;
  width: 548rpx;
  height: 508rpx;
  margin-right: 20rpx;
  background-color: #fff;
  opacity: .5;
}

.recommend .box .item .info {
  position: relative;
  z-index: 9;
  padding: 14rpx 30rpx 0 30rpx;
  box-sizing: border-box;

}
.recommend .box .item .img-box{
  position: absolute;
  top:282rpx;
  left: 0;
  width: 100%;
  height: 26rpx;
  z-index: 10;
  box-shadow: 0 -16rpx 16px 0 rgba(0,0,0,.2) inset;  
}
.recommend .box .item image {
  position: relative;
  width: 100%;
  height: 308rpx;
  z-index: 0;   
}

.recommend .box .item .txt {
  display: flex;
  margin-bottom: 14rpx;
}

.recommend .box .txt text {
  letter-spacing: 0;
}

.recommend .box .txt .name {
  white-space: nowrap;
  font-family: PingFangSC-Medium;
  font-size: 16px;
  margin-right: 30rpx;
  margin-left:10rpx;
}

.recommend .box .txt .value {
  position: relative;
  top:2rpx;
  display: block;
  flex:1;
  height:68rpx;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #9b9b9b;
}

.recommend .box .item .btn {
  display: flex;
  justify-content: space-between;
}

.recommend .box .item .btn>view {
  display: flex;
  justify-content: center;
  width: 212rpx;
  height: 56rpx;
  border-radius: 154rpx;
  box-shadow: 0 10rpx 10rpx 0 rgba(0, 0, 0, 0.09);
}
.recommend .box .item .btn.super{
  justify-content: center;
}
.recommend .box .item .btn.super>view{
  width:368rpx;
}
.recommend .box .item .btn text{
font-family: PingFangSC-Regular;
font-size: 13px;
color: #FFFFFF;
letter-spacing: 0;
line-height: 56rpx;
}
.recommend .box .item .btn .price{
  display: flex;
  align-items: flex-end;
}
.recommend .box .item .btn .lf .price text{
  color:var(--text);
}
.recommend .box .item .btn .price text{
   font-family: PingFangSC-Semibold;
   margin-right: 10rpx;
}
.recommend .box .item .btn .price text.txt-mark{
  margin:0;
}
.recommend .box .item .btn .lf {
  background: #4a4a4a;
}

.recommend .box .item .btn .rt {
  background: var(--linearTwo);
}
.recommend .empty{
  flex-shrink: 0;
    width: 165rpx;
  height: 508rpx;
}



.empower-btn{
  position: absolute;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  z-index: 999;
  opacity: 0;
}

.nodata{
  position: relative;
  left: -20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.nodata image{
  margin-bottom: 28rpx;
}
.nodata image.week{
  width:586rpx;
  height: 374rpx;
}
.nodata image.work{
  width:368rpx;
  height: 356rpx;
}
.nodata text{
  opacity: 0.4;
font-family: PingFangSC-Light;
font-size: 14px;
color: #000000;
letter-spacing: 0;
line-height: 12px;
}

.img-cover{
  display: none;
}
.sp .img-cover{
  display: none;
  position: absolute;
  top:0.;
  left: 0;
  background-color: rgba(100,100,102,.6);
  /* display: flex; */
  align-items: center;
  justify-content: center;
  height: 308rpx;
  width:100%;
  z-index: 9;
  color:#fff;
}
.sp .btn>view{
  background: #D8D8D8!important;
}
.sp .btn text{
  color:#fff!important;
}