/* pages/information_detail/information_detail.wxss */
page{
  background-color: #fff;
}
.zixun_conts{
  padding: 30rpx;
  box-sizing: border-box;
}
.zixun_conts .zixun_title{
  font-family: PingFangSC-Medium;
  font-size: 18px;
  color: #000000;
  letter-spacing: 0;
  margin-bottom: 20rpx;
}
.zixun_conts .author{
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #666666;
  letter-spacing: 0;
}
.zixun_conts .time{
  font-family: PingFangSC-Regular;
  font-size: 10px;
  color: #999999;
  letter-spacing: 0;
  margin-bottom: 32rpx;
}
.zixun_conts .img{
  width: 690rpx;
  height: 504rpx;
  margin-bottom: 26rpx;
}
.zixun_conts .conts{
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #333333;
  letter-spacing: 0.4px;
  line-height: 24px;
  padding-bottom:98rpx;
}
.bottom_btn{
  display: flex;
  align-items: center;
  justify-items: center;
  width: 750rpx;
  height: 98rpx;
  background: #FFFFFF;
  box-shadow: 0 -1px 4px 0 rgba(0,0,0,0.10);
  position: fixed;
  bottom: 0;
}
.bottom_btn view{
  height: 98rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
}
.bottom_btn .line{
  display: inline-block;
  border-radius: 2rpx;
  width: 2rpx;
  height: 54rpx;
  background-color: #E4DFDF;
}
.bottom_btn view image{
  width: 44rpx;
  height: 44rpx;
  margin-right: 10rpx;
}
.bottom_btn view:nth-child(3) image{
  width: 50rpx;
  height: 32rpx;
}
.bottom_btn view text{
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #CCCCCC;
  letter-spacing: 0;
}
.bottom_btn .liked{
  color:var(--text);
}
