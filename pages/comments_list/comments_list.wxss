/* pages/comments_list/comments_list.wxss */
page{
  background-color: #ffffff;
  padding-bottom: 112rpx;
}

.comments_list .item{
  display: flex;
  padding-left:30rpx;
  padding-top: 30rpx;
}
.comments_list .item .left image{
  width: 72rpx;
  height: 72rpx;
  border-radius: 36rpx;
  background: #eee;
  margin-left: 10rpx;
}
.comments_list .right{
  flex: 1;
  padding-left: 10rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #F5F5F5;
}

.comments_list .right .name{
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #000000;
  letter-spacing: 0;
}
.comments_list .right .time{
  margin-top: 5rpx;
  font-family: PingFangSC-Regular;
  font-size: 11px;
  color: #C8C8C8;
  letter-spacing: 0;
}
.comments_list .right .cont{
  font-family: PingFangSC-Regular;
  font-size: 15px;
  color: #333333;
  letter-spacing: 0;
  margin: 20rpx 0 20rpx;
}
.comments_list .right .look_more{
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: var(--text);
  letter-spacing: 0;
}
.send_box{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 112rpx;
  background: #FFFFFF;
  box-shadow: 0 1px 2px 0 #000000;
  position:fixed;
  bottom:0;
  padding-bottom: 28rpx;
}
.send_box .left{
  width: 690rpx;
  height: 70rpx;
  background:  #F5F5F5;
  border-radius: 25rpx;
  display: flex;
  align-items:center;
  justify-content: center;
  padding:0 30rpx;
  box-sizing:border-box;
}
.send_box .left input{
  flex: 1;
}
.send_box .left .line{
  display: inline-block;
  margin: 0 31rpx 0 10rpx;
  width: 2rpx;
  height: 54rpx;
  background-color:  #E4DFDF;
}
.send_box .left .send{
  font-family: PingFangSC-Medium;
  font-size: 15px;
  color: var(--text);
  letter-spacing: 0;
  text-align: center;
}
.reply_mask{
  width:100%;
  height: 100%;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0,0,0,0.60);
}
.reply_box{
  width: 100%;
  height: 240rpx;
  position: fixed;
  bottom: 0;
  background-color: #ededed;
  z-index: 99;
}
.reply_box view{
  width:100%;
  height: 100rpx;
  background-color: #fff;
  color:#000;
  font-size:20px;
  font-family: PingFangSC-Regular;
  letter-spacing: -0.12px;
  text-align: center;
  line-height: 100rpx;
  margin-top:20rpx;
  margin-bottom: 0;
}