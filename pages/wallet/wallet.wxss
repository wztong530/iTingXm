.total {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 78rpx;
  height: 400rpx;
  background-image: var(--linearThree);
  border-radius: 0 0 360rpx 360rpx / 0 0 40rpx 40rpx;
  box-sizing: border-box;
}

.total .num {
  font-family: PingFangSC-Medium;
  font-size: 36px;
  color: #fff;
  letter-spacing: -1px;
  margin-bottom: 16rpx;
}


.total .num .mark {
  font-size: 18px;
}

.total .tip {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #fff;
  letter-spacing: -0.67px;
}

/*  */

.bill {
  position: relative;
  top: -90rpx;
  left: 16rpx;
  width: 718rpx;
  height: 806rpx;
  background: #fff;
  box-shadow: 0 3px 8px 0 rgba(96, 100, 112, 0.06);
  border-radius: 4px;
  padding-top: 10rpx;
  box-sizing: border-box;
}

.bill .item {
  display: flex;
  align-items: center;
  height: 100rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #e6e6e6;
}

.bill .title text {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #000;
  letter-spacing: -0.39px;
  text-align: center;
  line-height: 14px;
}

.bill .item .info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.bill .item .info text {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #000;
  line-height: 14px;
}

.bill .item .info .type {
  opacity: 0.6;
  letter-spacing: -0.34px;
  margin-bottom: 10rpx;
}

.bill .item .info .time {
  opacity: 0.4;
  font-size: 10px;
  letter-spacing: -0.24px;
  line-height: 10px;
}

.bill .item .num {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #ff9500;
  letter-spacing: -0.34px;
  text-align: center;
  line-height: 14px;
}

.bill .item .num.red {
  color: #ff5757;
}

/*  */

.footer {
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-image: var(--linearTwo);
}

.footer text {
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #fff;
  letter-spacing: -0.39px;
  line-height: 16px;
}

/* 弹窗 */



.popup .title {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  background-color: #f5f5f5;
}

.popup .title .txt {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #666;
  text-align: center;
  line-height: 14px;
}

.popup .title .icon {
  font-size: 24px;
  position: absolute;
  right: 0;
  color: #666;
  padding:30rpx;
}

.popup .content {
  display: flex;
  flex-wrap: wrap;
  padding: 80rpx 10rpx 50rpx;
}

.popup  .content .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 216rpx;
  height: 100rpx;
  margin: 0 10rpx 20rpx;
  border: 2rpx solid #000;
  border-radius: 2px;
}

.popup .content .item text {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #000;
  line-height: 16px;
  margin-bottom: 2rpx;
}

.popup .content .item .price {
  font-size: 12px;
  line-height: 12px;
}

.popup .content .item.select {
  border: 2rpx solid var(--text);
}

.popup .content .item.select text {
  color: var(--text);
}

.popup .btn {
  width: 650rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 62rpx;
  background-image: var(--linearTwo);
  box-shadow: 0 5px 7px 0 rgba(0, 0, 0, 0.15);
  border-radius: 200rpx;
}

.popup .btn text {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #fff;
  letter-spacing: 0;
  text-align: center;
  line-height: 14px;
}
