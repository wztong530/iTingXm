<header title='{{title}}'></header>
<view class='total'>
  <text class='num'><text class='mark'>¥</text>{{data.accountBalance}}</text>
  <text class='tip'>账户余额</text>
</view>

<scroll-view scroll-y class='bill'>
  <view class='title item'>
    <text>账户充值</text>
  </view>
  <view class='item' wx:for='{{data.rechargeList}}'>
    <view class='info'>
      <text class='type'>{{item.recordType}}</text>
      <text class='time'>{{item.updateDate}}</text>
    </view>
    <view class='num {{item.recordType == "充值"?"":"red"}}'>{{item.recordType == "充值"?"+":"-"}}{{item.money}}</view>
  </view>
</scroll-view>


<view class='footer' bindtap='showpopup'>
  <text>充值</text>
</view>
<!-- 充值弹窗 -->


<popup isShow='{{isShow}}' isPopup='{{isCover}}' catchhide='hidepopup'>
  <view class='popup'>
    <view class='title'>
      <text class='txt'>请选择</text>
      <text class='icon-spxq_xzgb icon' catchtap='hidepopup'></text>
    </view>
    <view class='content'>
      <view class='item {{cur == index?"select":""}}' wx:for='{{czInfo}}' bindtap='select' data-index='{{index}}'>
        <text>{{item.money}}元</text>
        <text class='price'>赠送{{item.send}}元</text>
      </view>
    </view>
    <view class='btn' bindtap='cz'>
      <text>去支付</text>
    </view>
  </view>

</popup>