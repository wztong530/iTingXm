/* pages/uploadProgram/uploadProgram.wxss */
page{
  background: #ffffff;
  /* padding-bottom: 110rpx; */
  padding-bottom: 650rpx;
}
.item .label{
  font-family: PingFangSC-Medium;
  font-size: 20px;
  color: #000000;
  letter-spacing: 0;
  padding: 30rpx 0 30rpx 36rpx;
  display: flex;
  justify-content: space-between;
  padding-right: 30rpx;
  align-items: center;
}
.item .label>view:last-child{
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #3E81D1;
  letter-spacing: 0;
}
.upload_btn{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  margin-bottom:50rpx;
  height:68rpx;
  box-sizing:border-box;
}
.upload_btn .left{
  font-family: PingFangSC-Regular;
  font-size: 15px;
  color: #666666;
  letter-spacing: 0;
  text-align: center;
}
.upload_btn .right{
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #CCCCCC;
}
.upload_btn .right image{
  width: 80rpx;
  height: 80rpx;
  display: inline-block;
  margin-right:20rpx;
}
.upload_btn .right input{
  font-size:14px;
  color:#333;
  width:400rpx;
  padding-top: 8rpx;
}
.bottom{
  background-color: #fff;
  width:100%;
  padding:0 30rpx 30rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}
.bottom_btn{
  width: 330rpx;
  height: 80rpx;
  border-radius: 40rpx;
  box-shadow: 0 8rpx 24rpx 0 rgba(255, 68, 53, 0.1);
  text-align: center;
  line-height: 80rpx;
  font-family: PingFangSC;
  font-size: 16px;
  font-weight: 500;
}
.add_btn{
  width: 318rpx;
  height: 68rpx;
  line-height: 66rpx;
  border:1px solid transparent;
  color:var(--textTwo);
  background-color: #fff;
  position: relative;
}
.add_btn::after{
  content: "";
  display: block;
  position: absolute;
  border-radius: 40rpx;
  top:-2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  z-index: -1;
  background-image: var(--linearTwo);
}
.sub_btn{
  color: #ffffff;
  background-image: var(--linearTwo);
}