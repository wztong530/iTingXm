
page{
  background-color: #fff;
}

.live_list{
  display: flex;
  flex-wrap: wrap;
  padding:28rpx;
  justify-content: space-between;
}
.live_list .live_item{
  width:330rpx;
  display: flex;
  flex-direction: column;
}
.live_list .live_box{
  width: 330rpx;
  height: 200rpx;
  position: relative;
  box-shadow: 0 8rpx 8rpx 0 rgba(0,0,0,0.10);
  border-radius: 19rpx;
}
.live_list .live_bg{
  width: 100%;
  height: 100%;
  background-color: #eee;
  border-radius:19rpx;
}
.live_list .conts{
  position: absolute;
  width:100%;
  height:100%;
  top:0;
  left:0;
}

.live_list .live_title{
  font-family: PingFangSC;
  font-size: 14px;
  color: #000000;
  letter-spacing: 0;
  margin: 16rpx 0 0;
  width:280rpx;
  font-weight: 500;
}
.live_list .channel{
  font-family: PingFangSC;
  font-size: 12px;
  color: #666666;
  letter-spacing: 0;
  margin-top:6rpx;
}