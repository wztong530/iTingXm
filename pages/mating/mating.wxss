/*  */

.nobd {
  border: none !important;
}

.btn .number {
  font-family: PingFangSC-Regular;
  font-size: 18px;
  color: #858585;
  letter-spacing: -0.13px;
  line-height: 18px;
  margin: 0 20rpx;
}

.btn .sub {
  width: 52rpx;
  height: 52rpx;
  border-radius: 26rpx;
}

.btn .add {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 52rpx;
  height: 52rpx;
  border-radius: 26rpx;
  background-color: var(--text);
}

.btn .add .icon {
  color: #fff !important;
  font-size: 12px;
  font-weight: bold;
}

/*  */

.tabnav {
  position: relative;
  top: -2rpx;
  display: flex;
  align-items: center;
  height: 80rpx;
  margin-bottom: 20rpx;
  background: #fff;
  box-shadow: 0 6px 11px 0 rgba(0, 0, 0, 0.05);
  z-index: 9;
}

.tabnav .item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}

.tabnav .item text {
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #575757;
  line-height: 14px;
}

.tabnav .item.select text {
  color: var(--text);
}

.tabnav .item.select .bd {
  position: absolute;
  bottom: 0;
  width: 88rpx;
  height: 4rpx;
  background-color: var(--text);
}

/*  */

.list {
  position: absolute;
  top:228rpx;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  padding-bottom: 96rpx;
}

.list .item {
  position: relative;
  display: flex;
  padding: 30rpx 0;
  box-sizing: border-box;
  border-bottom: 2rpx solid #ddd;
}

.list .item .goods {
  width: 178rpx;
  height: 178rpx;
  margin-right: 30rpx;
}

.list .item .content {
  display: flex;
  flex-direction: column;
  flex: 1;
  box-sizing: border-box;
}

.list .item .content text {
  font-family: PingFangSC-Regular;
  color: #000;
  line-height: 16px;
}

.list .item .content .name {
  font-size: 16px;
  margin-bottom: 18rpx;
}

.list .item .content .sales {
  opacity: 0.4;
  font-size: 14px;
}

.list .item .content .price {
  font-size: 18px;
  color: var(--text);
  line-height: 15px;
  font-weight: 700;
}

.list .item .content .box {
  position: absolute;
  left: 0;
  bottom: 4rpx;
}

.list .item .content .tip {
  position: absolute;
  top:-28rpx;
  left: 0;
  white-space: nowrap;
  display: flex;
  justify-content: center;
  align-items: center;
  padding:0 10rpx;
  height: 28rpx;
  background: var(--text);
  border-radius: 200rpx;
}

.list .item .content .tip text {
  font-size: 11px;
  color: #fff;
  letter-spacing: 0;
  line-height: 10px;
}

.list .item .content .mark {
  font-size: 12px;
  color:var(--text);
}

.list .item .content .btn {
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 0;
  right: 0;
}

/*  */

.cart {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 96rpx;
  display: flex;
  z-index: 99999;
}

.cart .buy {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 240rpx;
  height: 96rpx;
  background-image: var(--linearTwo);
}

.cart .buy text {
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #fff;
  letter-spacing: 0;
  line-height: 16px;
}

.cart .total {
  flex: 1;
  display: flex;
  height: 96rpx;
  background: #4a4a4a;
}

.cart .total text {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #fff;
}

.cart .total .icon {
  position: relative;
  top: -24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 34rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: #272728;
}

.cart .total .icon image {
  width: 43.8rpx;
  height: 43.8rpx;
}

.cart .total .icon .num {
  position: absolute;
  top: 0;
  right: -10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36rpx;
  height: 36rpx;
  border-radius: 18rpx;
  background-color: var(--text);
}

.cart .total .icon .num text {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #fff;
  letter-spacing: 0;
  line-height: 12px;
}

.cart .total .txt {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 96rpx;
}

.cart .total .txt .tip {
  font-size: 12px;
}

/*  */

.cart-list {
  margin-bottom: 96rpx;
  width: 100%;
  background-color: #f5f5f5;
}

.cart-list .header {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 68rpx;
  background-color: #f5f5f5;
}

.cart-list .header text {
  opacity: 0.4;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #000;
  letter-spacing: 0;
  line-height: 14px;
}

.cart-list .c-list {
  max-height: 800rpx;
  background-color: #f5f5f5;
}

.cart-list .c-list .item text {
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #212539;
  letter-spacing: -0.43px;
  line-height: 14px;
}

.cart-list .c-list .item .name {
  flex: 1;
}

.cart-list .c-list .title .num {
  color: #000;
}

.cart-list .c-list .item .price {
  margin-left: 50rpx;
}

.cart-list .c-list .item {
  display: flex;
  align-items: center;
  height: 100rpx;
  background-color: #fff;
  margin-bottom: 1rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.cart-list .c-list .title {
  margin-bottom: 24rpx;
}

.cart-list .c-list .item .btn {
  display: flex;
  align-items: center;
  margin-left: 40rpx;
}

.cart-list .c-list .empty {
  height: 120rpx;
  background-color: #fff;
}

.pos-btn {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 99;
  top: 0;
  opacity: 0;
}

.nodata {
  display: flex;
  padding-top: 300rpx;
  flex-direction: column;
  align-items: center;
}

.nodata image {
  width: 312rpx;
  height: 218rpx;
  margin-bottom: 52rpx;
}

.nodata text {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #cacaca;
  letter-spacing: -0.3px;
  line-height: 20px;
}

.list .item .cover{
  display: none;
}
.list .item.sp .cover{
  position: absolute;
  top:30rpx;
  left: 0;
  width:178rpx;
  height: 178rpx;
background: rgba(123,111,105,.6);
display: flex;
align-items: center;
justify-content: center;
color:white;
}
.list .item.sp .tip{
  display: none;
}
.list .item.sp .add{
  background: #D8D8D8;
}
.list .item.sp .box text{
  color: #D8D8D8!important;
}