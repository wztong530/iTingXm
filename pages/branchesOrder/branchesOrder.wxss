/* pages/EnterpriseOrder/EnterpriseOrder.wxss */

page {
  background-color: #f3f3f3;
}

.orderItem {
  background-color: #fff;
  box-shadow: 0 10px 16px 0 rgba(0, 0, 0, 0.06);
  border-radius: 2px;
  width: 710rpx;
  padding: 0 10rpx;
  margin: 20rpx auto 0;
}

.top {
  height: 88rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e9e9e9;
}

.branchName {
  flex: 1;
  display: flex;
  align-items: center;
  margin-left: 14rpx;
}

.top .txt {
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #222333;
  letter-spacing: 0;
  line-height: 14px;
}

.icon {
  width: 12rpx;
  height: 20.4rpx;
  margin-left: 10rpx;
  font-size: 10px;
}

.top .state {
  margin-right: 14rpx;
  color: #ff9500;
}

.orderDetail {
  display: flex;
  padding: 16rpx 14rpx 26rpx;
  border-bottom: 1rpx solid #e9e9e9;
}

.food {
  flex: 4;
  display: flex;
  flex-wrap: wrap;
}

.fooditem {
  margin-right: 20rpx;
}

.ellipsis {
  padding-top: 20rpx;
}

.ellipsis .dots {
  margin: auto;
  width: 8rpx;
  height: 8rpx;
  background-color: #9b9b9b;
  display: inline-block;
  border-radius: 50%;
  margin-right: 10rpx;
}

.food .foodimg {
  width: 104rpx;
  height: 104rpx;
  background-color: #000;
  margin-bottom: 30rpx;
  box-shadow: 0 10px 16px 0 rgba(0, 0, 0, 0.06);
  border-radius: 2px;
}

.food .price {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #666;
  letter-spacing: 0;
  line-height: 12px;
}

/* .food_num_price{
  flex: 1;
} */

.totalprice {
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #ff9500;
  letter-spacing: 0;
  text-align: right;
  padding-top: 32rpx;
}

.totalnum {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #000;
  letter-spacing: 0;
  text-align: right;
}

.bottom {
  padding: 16rpx 0;
  display: flex;
}

.bottom .time {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #9b9b9b;
  flex: 1;
  margin: auto 14rpx;
}

.share {
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: #fff;
  letter-spacing: 0;
  width: 144rpx;
  height: 56rpx;
  background: #ff9500;
  border: 0 solid #ff9500;
  border-radius: 100px;
  margin-right: 20rpx;
}

.cheakDetail {
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: #000;
  letter-spacing: 0;
  border: 1rpx solid #bababa;
  border-radius: 100px;
  width: 144rpx;
  height: 56rpx;
}

.hasNomore {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #a8a8a8;
  letter-spacing: 0;
  text-align: center;
  height: 120rpx;
  line-height: 120rpx;
}

.nodata {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  padding-top: 300rpx;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.nodata image {
  width: 312rpx;
  height: 218rpx;
  margin-bottom: 52rpx;
}

.nodata text {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #cacaca;
  letter-spacing: -0.3px;
  line-height: 20px;
}

/*  */

.title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  height: 100rpx;
  background-color: rgb(242, 242, 242);
}

.title .choice-time {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 30rpx;
  height: 52rpx;
  background: #fff;
  border: 1rpx solid #dfdfdf;
  border-radius: 100px;
}

.title .choice-time text {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #000;
  letter-spacing: -0.34px;
  text-align: center;
  line-height: 14px;
  margin-right: 12rpx;
}

.title .tip {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.title .tip text {
  display: inline;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #999;
  letter-spacing: -0.34px;
}

.tringle {
  position: relative;
  top: 6rpx;
  width: 0;
  height: 0;
  border: 10rpx solid rgba(0, 0, 0, 0.3);
  border-right-color: transparent;
  border-bottom-color: transparent;
  border-left-color: transparent;
}

.foot-btn .print {
  background-image: var(--linearTwo);
}

.foot-btn {
  display: flex;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  box-shadow: 0 -10rpx 10rpx 0 rgba(0, 0, 0, 0.06);
}

.foot-btn view {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
}
.foot-btn .peis{
  background: #4A4A4A;
}
.foot-btn text{
    font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #fff;
  letter-spacing: 0.1;
  line-height: 17px;
  font-weight: 600;
}