.viewbox {
  width: 710rpx;
  margin: 0 auto;
  box-shadow: 0 10px 16px 0 rgba(0, 0, 0, 0.06);
}

.method {
  position: relative;
  top: 18rpx;
  margin-bottom: 38rpx;
}

.method .tab {
  display: flex;
  align-items: flex-end;
}

.method .tab view {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 54rpx;
  background-color: #f7f7f7;
}

.method .tab view.select {
  background-color: #fff;
  height: 60rpx;
}

.method .tab text {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #000;
  letter-spacing: -0.39px;
  line-height: 16px;
}

.method .tab .select text {
  font-family: PingFangSC-Medium;
  color: var(--text);
}

.method .invite, .method .noinvite {
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.method .site-info {
  display: flex;
  justify-content: center;
  flex-direction: column;
  border-bottom: 2rpx solid #e9e9e9;
  padding: 34rpx 10rpx;
  box-sizing: border-box;
}

.method .site-info .title {
  margin-bottom: 30rpx;
}

.method .site-info .title text {
  font-family: PingFangSC-Light;
  font-size: 14px;
  color: #000;
  letter-spacing: -0.34px;
  line-height: 14px;
}

.method .site-info .address {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.method .site-info .address .info {
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #000;
  letter-spacing: -0.39px;
  line-height: 16px;
}

.method .site-info .address .icon {
  font-size: 12px;
}

.method .site-info .distance {
  display: flex;
  align-items: center;
}

.method .site-info .distance text {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  letter-spacing: 0;
  line-height: 14px;
}

.method .site-info .distance .bd {
  height: 20rpx;
  width: 2rpx;
  background: #d8d8d8;
  margin: 0 12rpx;
}

.method .site-info .distance .value {
  color: #000;
}

.method .site-info .distance .btn {
  display: flex;
  align-items: center;
}

.method .site-info .distance .btn text {
  color: var(--text);
}

/*  */

.method .invite .contact {
  display: flex;
  padding: 34rpx 10rpx;
  box-sizing: border-box;
}
.method .contact.bd{
  border-bottom: 2rpx solid #e9e9e9;
}

.method .invite .site-info .address {
  margin-bottom: 30rpx;
}

.method .invite .contact .time {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.method .invite .contact .phone {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.method .invite .contact .name {
  opacity: 0.4;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #000;
  letter-spacing: 0;
  margin-bottom: 10rpx;
}

.method .invite .contact .value {
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #000;
  letter-spacing: 0;
  line-height: 14px;
}

.method .invite .contact .value .icon {
  opacity: 0.4;
  margin-left: 20rpx;
  font-size: 12px;
}

/*  */

.method .noinvite .user-info text {
  opacity: 0.4;
  font-family: PingFangSC-Light;
  font-size: 14px;
  color: #000;
  letter-spacing: -0.34px;
  line-height: 14px;
}

.method .noinvite .user-info .name {
  margin-right: 20rpx;
}

.method .noinvite .address {
  margin-bottom: 10rpx;
}

.method .noinvite .contact {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 34rpx 10rpx;
  box-sizing: border-box;
}

.method .noinvite .contact .name {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #000;
  letter-spacing: 0;
  line-height: 14px;
}

.method .noinvite .contact .icon {
  margin-left: 20rpx;
  font-size: 12px;
}

/*  */

.detail {
  padding: 0 18rpx;
  box-sizing: border-box;
  margin-bottom: 100rpx;
  background-color: #fff;
}

.detail .box {
  display: flex;
  align-items: center;
  height: 88rpx;
  box-sizing: border-box;
}

.detail .price {
  font-family: PingFangSC-Medium;
  font-size: 14px;
  letter-spacing: 0;
  line-height: 14px;
  margin-left: 24rpx;
}

.detail .item {
  height: 120rpx;
  border-bottom: 2rpx solid #e9e9e9;
}

.detail .item image {
  width: 84rpx;
  height: 84rpx;
  background-color: red;
  margin-right: 24rpx;
}

.detail text {
  font-family: PingFangSC-Regular;
  color: #000;
  letter-spacing: 0;
  line-height: 15px;
}

.detail .item text {
  font-size: 12px;
}

.detail .name {
  flex: 1;
}

.detail .mark {
  font-size: 10px;
}

.detail .free {
  border-bottom: 2rpx solid #e9e9e9;
}

.detail .free .tips {
  display: block;
  font-family: PingFangSC-Regular;
  font-size: 10px;
  color: #9bacc0;
  letter-spacing: -0.24px;
  text-align: center;
  line-height: 28rpx;
  background: rgba(242, 243, 247, 0.5);
  border: 0 solid #ccd2de;
  border-radius: 1px;
  width:72rpx;
  height: 28rpx;
}

.detail .free .name {
  font-size: 14px;
  margin-left: 42rpx;
}

.detail .total .name {
  font-size: 14px;
}

.detail .total .price {
  font-size: 16px;
}

.agreement {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 120rpx;
}

.agreement .icon {
  width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  background: #ececec;
  border: 1rpx solid #ccc;
}

.agreement image {
  width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
}

.agreement text {
  opacity: 0.4;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #000;
  letter-spacing: 0;
  line-height: 14px;
  margin-left: 20rpx;
}

/*  */

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  align-items: center;
  height: 100rpx;
  z-index: 99;
}

.footer .total {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100rpx;
  background: #4a4a4a;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.footer .total text {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #fff;
  letter-spacing: 0;
}
.footer .total text.big{
  font-size: 16px;
}

.footer .total .price {
  font-size: 16px;
}

.footer .buy {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  width: 240rpx;
  background-image: var(--linearTwo);
}

.footer .buy text {
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #fff;
  letter-spacing: 0;
  line-height: 16px;
}

/* 弹窗 */

.cover .title {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  background-color: #f5f5f5;
}

.cover .title .txt {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #666;
  text-align: center;
  line-height: 14px;
}

.cover .title .icon {
  font-size: 24px;
  position: absolute;
  right: 0;
  color: #666;
  padding: 30rpx;
}

.cover  .content {
  padding: 0 30rpx 140rpx;
}

.cover .content .item {
  display: flex;
  align-items: center;
  width: 100%;
  height: 106rpx;
  border-bottom: 2rpx solid rgba(233, 233, 233, 0.8);
}

.cover .content .item .name {
  display: flex;
  align-items: center;
  flex: 1;
}

.cover .content .item text {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #222333;
  letter-spacing: 0;
  line-height: 14px;
}

.cover .content .item .icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 14rpx;
}

.cover .content .choose-btn {
  width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  margin-right: 2rpx;
  background: #ececec;
  border: 1rpx solid #ccc;
}

.cover .btn {
  width: 650rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 62rpx;
  background-image: var(--linearTwo);
  box-shadow: 0 5px 7px 0 rgba(0, 0, 0, 0.15);
  border-radius: 200rpx;
}

.cover .btn text {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #fff;
  letter-spacing: 0;
  text-align: center;
  line-height: 14px;
}
