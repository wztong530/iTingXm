/* pages/picturePreview/picturePreview.wxss */
page{
  background-color: #333;
  width: 100%;
  height: 100%;
}
.pre_img{
  width: 100%;
  background-color: #333;
  position: relative;
  top:50%;
  transform: translateY(-50%)
}
.pre_img>image{
  width: 100%;
}
.save_btn{
  width: 100%;
  height: 100%;
  position: absolute;
  top:0;
  left: 0;
  opacity: 0;
}
.reply_mask{
  width:100%;
  height: 100%;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0,0,0,0.60);
}
.reply_box{
  width: 100%;
  height: 240rpx;
  position: fixed;
  bottom: 0;
  background-color: #ededed;
  z-index: 99;
}
.reply_box view{
  width:100%;
  height: 100rpx;
  background-color: #fff;
  color:#000;
  font-size:20px;
  font-family: PingFangSC-Regular;
  letter-spacing: -0.12px;
  text-align: center;
  line-height: 100rpx;
  margin-top:20rpx;
  margin-bottom: 0;
}