/* pages/binding_account/binding_account.wxss */
.tip{
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  background-color: #818181;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #FFFFFF;
  text-align: center;
}
.label{
  font-family: PingFangSC-Medium;
font-size: 12px;
color: #4A4A4A;
letter-spacing: 0.26px;
  padding: 24rpx 0 24rpx 50rpx;
}
.list{
  background-color: #ffffff;
  padding:0 30rpx;
}
.list .item{
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
}
.list .item input,
.list .item picker{
  height: 100rpx;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  letter-spacing: 0;
  line-height: 100rpx;
  padding-left: 10rpx;
  flex:1;
  color:#000;
}
.list .item picker .color{
  color: #AAAAAA;
}
.list .item .explain{
  display: inline-block;
  width: 42rpx;
  height: 42rpx;
  background-color: #818181;
  border-radius: 21rpx;
  color: #ffffff;
  text-align:center;
  line-height:42rpx;
}
.btn{
  width: 650rpx;
  height: 80rpx;
  margin: 460rpx auto 0;
  font-family: PingFangSC-Semibold;
  font-size: 15px;
  color: #FFFFFF;
  letter-spacing: -0.43px;
  text-align: center;
  line-height: 80rpx;
  background-image: linear-gradient(90deg, #FF9000 0%, #FFAA00 93%);
  border-radius: 200rpx;
}
.popup image{
  width: 542rpx;
  height: 700rpx;
  margin: auto;
  z-index: 1000;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -350rpx;
  margin-left: -271rpx;
}
.mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 999;
}
.icon-xyb{
  color:#aaa;
  font-size:13px;
}