/* pages/orderDetail/orderDetail.wxss */
page{
  background-color: #f3f3f3;
}
.order_info{
  background: #FFFFFF;
  box-shadow: 0 10px 16px 0 rgba(0,0,0,0.06);
  border-radius: 2px;
  margin: 20rpx 20rpx 0;
  padding: 0 20rpx;
  
}
.orInfoItem{
  display: flex;
  padding: 34rpx 0;
  border-bottom: 1rpx solid #E9E9E9;
  
}
.orInfoItem:nth-child(4){
  padding: 18rpx 0;
}
.orInfoItem label{
  flex: 1;
  opacity: 0.4;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #000000;
  letter-spacing: 0;
  margin-left: 16rpx;
  margin:auto 0;

}
.orInfoItem text{
  flex: 3;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #000000;
  letter-spacing: 0;
  text-align: right;
}
.orInfoItem .way{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 144rpx;
  height: 56rpx;
  border: 1rpx solid var(--text);
  border-radius: 100px;
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: var(--text);
  letter-spacing: 0;
}
.order_cont{
  background: #FFFFFF;
  box-shadow: 0 10px 16px 0 rgba(0,0,0,0.06);
  border-radius: 2px;
  display: flex;
  margin: 20rpx 20rpx 0;
  padding: 0 20rpx;
  flex-direction: column;

}
.space{
  width: 100%;
  height: 110rpx;
}
.orContItem{
  display: flex;
  padding: 34rpx 0;
  border-bottom: 1rpx solid #E9E9E9;
}
.orContItem .foodimg{
  width: 84rpx;
  height: 84rpx;
  background-color: #000000;
  margin-right:24rpx;

}
.orContItem .foodname{
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #000000;
  letter-spacing: 0;
  flex: 3;
  margin:auto 0;

}
.orContItem .food_num_price{
  flex: 2;
  margin:auto 0;
  font-size: 14px;
  text-align: right;

}
.food_num,.price{
  display: inline-block;
}
.food_num{
  margin-right: 30rpx;
}
.price{
  font-size: 14px;
}
.orContItem .tips{
  font-family: PingFangSC-Regular;
  font-size: 10px;
  color: #9BACC0;
  letter-spacing: -0.24px;
  text-align: center;
  margin:auto 0;
  border:1rpx solid #e9ebf1;
  background-color: #f9f9fb;
  padding: 2rpx;
  margin-right:36rpx;
}
.contact{
  position: fixed;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  font-size: 16px;
  color: #FFFFFF;
  text-align: center;
  line-height: 100rpx;
  background-image: linear-gradient(90deg, #FF9000 0%, #FFAA00 93%);
}
.count{
  font-size: 14px;
  flex: 1;
}
.totalprice{
  font-size: 14px;
  text-align: right;
  flex: 1;
}